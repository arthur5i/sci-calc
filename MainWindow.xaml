<Window x:Class="ScientificCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScientificCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0"
                    Name="InputDisplayTextBlock"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            </TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="1"
                    Name="OutputDiplayTextBlock"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            </TextBlock>
            
            <!--<Label Grid.Column="0" Grid.Row="1"
               Name="OutputDiplay" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                1234567890
            </Label>-->
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,33">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Column="2" Grid.Row="0" Name="KeyLeft" Click="OnClickLeft">🞀</Button>
            <Button Grid.Column="4" Grid.Row="0" Name="KeyRight" Click="OnClickRight">🞂</Button>
        </Grid>

        <Grid Grid.Row="1" Margin="0,75,0,108" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0"></Button>
            <Button Grid.Column="1" Grid.Row="0"></Button>
            <Button Grid.Column="4" Grid.Row="0"></Button>
            <Button Grid.Column="5" Grid.Row="0"></Button>

            <Button Grid.Column="0" Grid.Row="1"></Button>
            <Button Grid.Column="1" Grid.Row="1" Name="ButtonRoot" Click="OnClickRoot">√</Button>
            <Button Grid.Column="2" Grid.Row="1"></Button>
            <Button Grid.Column="3" Grid.Row="1"></Button>
            <Button Grid.Column="4" Grid.Row="1"></Button>
            <Button Grid.Column="5" Grid.Row="1"></Button>

            <Button Grid.Column="0" Grid.Row="2"></Button>
            <Button Grid.Column="1" Grid.Row="2"></Button>
            <Button Grid.Column="2" Grid.Row="2"></Button>
            <Button Grid.Column="3" Grid.Row="2"></Button>
            <Button Grid.Column="4" Grid.Row="2"></Button>
            <Button Grid.Column="5" Grid.Row="2"></Button>

            <Button Grid.Column="0" Grid.Row="3"></Button>
            <Button Grid.Column="1" Grid.Row="3"></Button>
            <Button Grid.Column="2" Grid.Row="3"></Button>
            <Button Grid.Column="3" Grid.Row="3"></Button>
            <Button Grid.Column="4" Grid.Row="3"></Button>
            <Button Grid.Column="5" Grid.Row="3"></Button>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0" Name="Key7" Click="OnClickNumeral">7</Button>
            <Button Grid.Column="1" Grid.Row="0" Name="Key8" Click="OnClickNumeral">8</Button>
            <Button Grid.Column="2" Grid.Row="0" Name="Key9" Click="OnClickNumeral">9</Button>
            <Button Grid.Column="3" Grid.Row="0" Name="KeyDel" Click="OnClickDel">DEL</Button>
            <Button Grid.Column="4" Grid.Row="0" Name="KeyAc" Click="OnClickAc">AC</Button>

            <Button Grid.Column="0" Grid.Row="1" Name="Key4" Click="OnClickNumeral">4</Button>
            <Button Grid.Column="1" Grid.Row="1" Name="Key5" Click="OnClickNumeral">5</Button>
            <Button Grid.Column="2" Grid.Row="1" Name="Key6" Click="OnClickNumeral">6</Button>
            <Button Grid.Column="3" Grid.Row="1" Name="KeyMult" Click="OnClickOperator">×</Button>
            <Button Grid.Column="4" Grid.Row="1" Name="KeyDiv" Click="OnClickOperator">÷</Button>

            <Button Grid.Column="0" Grid.Row="2" Name="Key1" Click="OnClickNumeral">1</Button>
            <Button Grid.Column="1" Grid.Row="2" Name="Key2" Click="OnClickNumeral">2</Button>
            <Button Grid.Column="2" Grid.Row="2" Name="Key3" Click="OnClickNumeral">3</Button>
            <Button Grid.Column="3" Grid.Row="2" Name="KeyAdd" Click="OnClickOperator">+</Button>
            <Button Grid.Column="4" Grid.Row="2" Name="KeySub" Click="OnClickOperator">-</Button>

            <Button Grid.Column="0" Grid.Row="3" Name="Key0" Click="OnClickNumeral">0</Button>
            <Button Grid.Column="1" Grid.Row="3" Name="KeyPoint" Click="OnClickPoint">.</Button>
            <Button Grid.Column="2" Grid.Row="3" Name="KeySciNot">×10ˣ</Button>
            <Button Grid.Column="3" Grid.Row="3" Name="KeyAns">Ans</Button>
            <Button Grid.Column="4" Grid.Row="3" Name="KeyEqual" Click="OnClickEquals">=</Button>
        </Grid>
    </Grid>
</Window>
