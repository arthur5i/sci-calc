<Window x:Class="ScientficCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScientficCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0">7</Button>
            <Button Grid.Column="1" Grid.Row="0">8</Button>
            <Button Grid.Column="2" Grid.Row="0">9</Button>
            <Button Grid.Column="3" Grid.Row="0">DEL</Button>
            <Button Grid.Column="4" Grid.Row="0">AC</Button>

            <Button Grid.Column="0" Grid.Row="1">4</Button>
            <Button Grid.Column="1" Grid.Row="1">5</Button>
            <Button Grid.Column="2" Grid.Row="1">6</Button>
            <Button Grid.Column="3" Grid.Row="1">×</Button>
            <Button Grid.Column="4" Grid.Row="1">÷</Button>

            <Button Grid.Column="0" Grid.Row="2">1</Button>
            <Button Grid.Column="1" Grid.Row="2">2</Button>
            <Button Grid.Column="2" Grid.Row="2">3</Button>
            <Button Grid.Column="3" Grid.Row="2">+</Button>
            <Button Grid.Column="4" Grid.Row="2">-</Button>

            <Button Grid.Column="0" Grid.Row="3">0</Button>
            <Button Grid.Column="1" Grid.Row="3">.</Button>
            <Button Grid.Column="2" Grid.Row="3">×10ˣ</Button>
            <Button Grid.Column="3" Grid.Row="3">Ans</Button>
            <Button Grid.Column="4" Grid.Row="3">=</Button>
        </Grid>
    </Grid>
</Window>
